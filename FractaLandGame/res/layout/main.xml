<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="top"
	android:orientation="vertical" >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvStepSize"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Step:"/>
		<EditText
			android:id="@+id/etStepSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="10"/>
		<TextView
			android:id="@+id/tvRadius"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Radius:"/>
		<EditText
			android:id="@+id/etRadius"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="10"/>
		<Button
			android:id="@+id/btnCreateAL"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Create AL" />

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="left"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvStepIncr"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Incr:"/>
		<EditText
			android:id="@+id/etStepIncr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="1"/>
		<TextView
			android:id="@+id/tvNumIncrs"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="NumIncrs:"/>
		<EditText
			android:id="@+id/etNumIncrs"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="10"/>
		<Button
			android:id="@+id/btnRunIncrs"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Run Incrs" />

	</LinearLayout>


	<!-- -->
	<com.seethefractals.game.GameView
		android:id="@+id/vGame"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />

</LinearLayout>
